# copy this file to /etc/systemd/system/
# run sudo systemctl daemon-reload
# run sudo systemctl enable barcode-reader.service
# run sudo systemctl start barcode-reader.service
[Unit]
Description=Barcode reader Spring App
[Service]
User=pi
WorkingDirectory=/home/pi/dev
ExecStart=/home/pi/dev/run-barcode-reader
SuccessExitStatus=143
TimeoutStopSec=10
Restart=on-failure
RestartSec=5
[Install]
WantedBy=multi-user.target